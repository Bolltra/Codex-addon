FROM ghcr.io/home-assistant/amd64-base:3.19

RUN apk update \
    && apk add --no-cache \
        bash \
        curl \
        git \
        python3 \
        py3-pip \
        ttyd \
    && apk add --no-cache gcc musl-dev python3-dev \
    && pip3 install --no-cache-dir --upgrade pip \
    && pip3 install --no-cache-dir codex-cli
