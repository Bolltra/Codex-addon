#!/usr/bin/with-contenv bashio
set -euo pipefail

PORT=7681

if ! command -v ttyd >/dev/null 2>&1; then
    bashio::log.fatal "ttyd is missing inside the container."
    exit 1
fi

TTY_CMD="/bin/bash"
TTY_ARGS=""

if command -v codex >/dev/null 2>&1; then
    bashio::log.info "Starting Codex Terminal (ttyd) on port ${PORT} with Codex CLI." 
    exec ttyd --writable -p "${PORT}" -i 0.0.0.0 /bin/bash -lc "cd /config && codex"
else
    bashio::log.warning "codex CLI not found in PATH; launching shell in /config."
    exec ttyd --writable -p "${PORT}" -i 0.0.0.0 /bin/bash -lc "cd /config && exec /bin/bash"
fi
